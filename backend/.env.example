# Postgres connection settings
POSTGRES_USER=learnlang
POSTGRES_PASSWORD=learnlang
POSTGRES_DB=learnlang
POSTGRES_PORT=5432
POSTGRES_HOST=localhost

# Single DATABASE_URL that tools and the app can use
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable

# App
APP_PORT=8080
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,https://learnlang.app,https://www.learnlang.app
